@model IEnumerable<Ecommerce.Data.HangHoa>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3">Danh sách sản phẩm</h1>
        <a class="btn btn-primary" asp-action="Create">
            <i class="fas fa-plus"></i> Thêm sản phẩm mới
        </a>
    </div>
    <hr />
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.TenHh)</th>
                    <th>@Html.DisplayNameFor(model => model.TenAlias)</th>
                    <th>@Html.DisplayNameFor(model => model.MoTaDonVi)</th>
                    <th>@Html.DisplayNameFor(model => model.DonGia)</th>
                    <th>@Html.DisplayNameFor(model => model.Hinh)</th>
                    <th>@Html.DisplayNameFor(model => model.NgaySx)</th>
                    <th>@Html.DisplayNameFor(model => model.GiamGia)</th>
                    <th>Số Lượt Xem</th>
                    <th>Tên Loại</th>
                    <th>Nhà Cung Cấp</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TenHh)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenAlias)</td>
                        <td>@Html.DisplayFor(modelItem => item.MoTaDonVi)</td>
                        <td>@Html.DisplayFor(modelItem => item.DonGia)</td>
                        <td>
                            <img src="~/img/HangHoa/@item.Hinh" alt="Ảnh sản phẩm" class="img-thumbnail" style="max-width: 100px;" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.NgaySx)</td>
                        <td>@Html.DisplayFor(modelItem => item.GiamGia)</td>
                        <td>@Html.DisplayFor(modelItem => item.SoLanXem)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaLoaiNavigation.TenLoai)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaNccNavigation.TenCongTy)</td>
                        <td>
                            <div class="d-flex">
                                <a class="btn btn-sm btn-info mx-1" asp-action="Edit" asp-route-id="@item.MaHh">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a class="btn btn-sm btn-secondary mx-1" asp-action="Details" asp-route-id="@item.MaHh">
                                    <i class="fas fa-info-circle"></i> Chi tiết
                                </a>
                                <a class="btn btn-sm btn-danger mx-1" asp-action="Delete" asp-route-id="@item.MaHh">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
